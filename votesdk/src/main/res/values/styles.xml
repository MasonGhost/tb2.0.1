<resources>


    <!--发起投票时长的radiobutton-->
    <style name="style_poll_radiobutton">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/vote_selector_pop_bg_time</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textColor">@drawable/vote_selector_color_999_blue</item>
        <item name="android:textSize">@dimen/vote_pop_text_13sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="style_anim_pop_vote">
        <item name="android:windowEnterAnimation">@anim/vote_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/vote_slilde_out_from_bottom</item>
    </style>
</resources>
