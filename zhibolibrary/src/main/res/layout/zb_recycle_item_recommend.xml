<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180px"
    android:layout_height="210px"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_live_item_cover"
            android:layout_width="match_parent"
            android:layout_height="180px" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@mipmap/ico_shade_cover"
            />


        <TextView
            android:id="@+id/tv_live_item_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="15px"
            android:background="@drawable/shape_stroke_corner_white"
            android:paddingBottom="5px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="5px"
            android:textColor="@color/white"
            android:textSize="18px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_live_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80px"
            android:layout_marginLeft="8px"
            android:textColor="@color/white"
            android:textSize="16px"
            android:visibility="gone" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_live_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="55px"
                android:textColor="@color/black"
                android:textSize="10px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/iv_live_item_user_icon"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6px"
            android:layout_marginLeft="10px" />
        <ImageView
            android:id="@+id/iv_live_item_verified"
            android:layout_marginTop="190px"
            android:layout_marginLeft="35px"
            android:layout_width="16px"
            android:layout_height="16px"
            android:background="@mipmap/ico_certified_02"
            />


    </com.zhy.autolayout.AutoRelativeLayout>
</android.support.v7.widget.CardView>