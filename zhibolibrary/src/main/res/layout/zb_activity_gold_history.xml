<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhiyicx.zhibolibrary.ui.components.AutoToolbar
        android:id="@+id/toolbar"
        style="@style/style_toolbar"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:id="@+id/rl_gold_history_back"
            style="@style/style_back_container">

            <ImageView
                style="@style/style_back_button"
                android:src="@mipmap/img_back" />
        </RelativeLayout>


        <TextView
            android:id="@+id/toolbar_title"
            style="@style/style_toolbar_title"
            android:layout_gravity="center"
            android:textColor="@color/black" />
    </com.zhiyicx.zhibolibrary.ui.components.AutoToolbar>

    <View
        android:id="@+id/line"
        android:layout_below="@+id/toolbar"
        style="@style/divider_style_horizontal"
        />

    <com.zhiyicx.zhibolibrary.ui.components.refresh.RefreshLayout
        android:id="@+id/srl_gold_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_gold_history"
            android:layout_width="match_parent"
            android:background="@color/color_divider"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v7.widget.RecyclerView>

    </com.zhiyicx.zhibolibrary.ui.components.refresh.RefreshLayout>

    <TextView
        android:id="@+id/iv_history_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>