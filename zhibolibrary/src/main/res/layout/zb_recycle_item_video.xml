    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_live_item_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_item_height"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_live_item_black_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_item_height"
            android:background="@mipmap/ico_shade_cover"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_live_item_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_people"/>

            <TextView
                android:id="@+id/tv_live_item_user_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                tool:text="12"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_live_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_live_item_cover"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="7dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="15sp"
            tool:text="望利鸟在成功给接口给大家送顾客"/>

