<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="26px"
    android:paddingTop="26px">

    <ImageView
        android:id="@+id/iv_raise_icon"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26px"
        android:src="@mipmap/default_user" />

    <TextView
        android:id="@+id/tv_raise_name"
        android:layout_width="125px"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15px"
        android:layout_toRightOf="@id/iv_raise_icon"
        android:textColor="@color/color_font_black_light"
        android:textSize="13sp"
        tool:text="张学友我23444" />

    <TextView
        android:id="@+id/tv_rasie_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="26px"
        android:text="@string/str_agree"
        android:textColor="@drawable/selector_blue_text"
        android:textSize="13sp" />

</com.zhy.autolayout.AutoRelativeLayout>