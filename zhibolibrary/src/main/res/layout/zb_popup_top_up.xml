<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top_up_title"
            android:layout_width="match_parent"
            android:layout_height="85px"
            android:background="@drawable/shape_top_corner"
            android:gravity="center"
            android:textColor="@color/color_font_black_light"
            android:textSize="@dimen/font_large" />

        <ImageView style="@style/divider_style_horizontal" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_top_up_edit"
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:background="@color/white"
            android:gravity="center">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="35px"
                android:background="@color/color_font_divide_gry"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_top_up_edit"
                    style="@style/zb_style_edit"
                    android:textColorHint="@color/gray"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="0px"
                    android:lines="1"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView style="@style/divider_style_horizontal" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_top_up_cancel"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bottom_left_corner"
                    android:text="取消"
                    android:textColor="@color/color_blue_button"
                    android:textSize="@dimen/font_large" />


                <Button
                    android:id="@+id/bt_top_up_confirm"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bottom_right_corner"
                    android:text="确定"
                    android:textColor="@color/color_blue_button"
                    android:textSize="@dimen/font_large" />

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                style="@style/divider_style_veitical"
                android:layout_centerHorizontal="true" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>