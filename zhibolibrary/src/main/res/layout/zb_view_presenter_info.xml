<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/rl_publish_core_presenter_info"
    android:layout_width="wrap_content"
    android:layout_height="70px"
    android:layout_marginLeft="30px"
    android:layout_marginTop="30px"
    android:background="@drawable/shape_solid_corner_circle_black"
    android:orientation="horizontal"
    android:paddingLeft="-1dp"
    android:paddingRight="16dp">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_presenter_headpic"
            android:layout_width="70px"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:src="@mipmap/default_user"/>

        <ImageView
            android:id="@+id/iv_presente_verified1"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignBottom="@+id/iv_presenter_headpic"
            android:layout_alignRight="@+id/iv_presenter_headpic"
            android:background="@mipmap/ico_certified_02"
            android:visibility="gone"
            />

    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10px"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_presenter_name"
            android:layout_width="wrap_content"
            tool:text="正高规格"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_user"
            android:textColor="@color/title_blue"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_presenter_englishname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_user"
            android:textColor="@color/white"
            android:textSize="11sp"
            tool:text="korea"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>