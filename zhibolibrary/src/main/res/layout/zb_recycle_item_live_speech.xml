<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5px"
    android:paddingTop="5px">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20px">

        <ImageView
            android:id="@+id/iv_live_chat_icon"
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@mipmap/default_user" />

        <ImageView
            android:id="@+id/iv_ietm_verified"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:background="@mipmap/ico_certified_02" />
    </com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_speech_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_live_chat_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80px"
        android:background="@drawable/chat_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_speech_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxWidth="400px"
            android:textColor="@color/color_blue_button"
            android:textSize="16sp"
            tool:text="woowow:" />

        <ImageView
            android:id="@+id/iv_speech_status"
            android:layout_width="43px"
            android:layout_height="43px"
            android:src="@mipmap/live_ico_message_voice" />

        <TextView
            android:id="@+id/tv_speech_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_smart"
            tool:text="60â€  " />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>