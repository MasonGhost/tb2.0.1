<resources>

    <!-- Base application theme. -->
    <style name="ZBlibraryAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_top_navigate</item>
        <item name="colorPrimaryDark">@color/color_top_navigate</item>
        <item name="android:listDivider">@drawable/divider</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/title_blue</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Self" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/title_blue</item>
    </style>

    <!--没有title-->
    <style name="AppThemeNoTittle" parent="ZBlibraryAppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--splash theme-->
    <style name="SplashTheme" parent="ZBlibraryAppTheme">
        <!--<item name="android:windowBackground">@mipmap/splash_bg</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--没有Title黑色状态栏-->
    <style name="AppThemeNoTittleAndBlackStatus" parent="ZBlibraryAppTheme">
        <item name="colorPrimaryDark">@color/color_black_dark</item>
    </style>
    <!--全屏-->
    <style name="AppThemeNoTittleAndFill" parent="ZBlibraryAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--filterWindow动画-->
    <style name="filter_window_animstyle">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_disappear</item>
    </style>

    <style name="translate_animstyle">
        <item name="android:windowEnterAnimation">@anim/activity_upword_in</item>
        <item name="android:windowExitAnimation">@anim/activity_downword_out</item>
    </style>


    <style name="style_edit_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_height_tall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="zb_style_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:background">@color/white_gray</item>
        <item name="android:textColor">@color/color_font_black_light</item>
        <item name="android:textColorHint">@color/color_button_gray</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!-- 分隔线水平-->
    <style name="divider_style_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/color_divider</item>
    </style>
    <!-- 分隔线垂直-->
    <style name="divider_style_veitical">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>


    <style name="style_login_button">
        <item name="android:layout_width">@dimen/button_big_width</item>
        <item name="android:layout_height">@dimen/button_big_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_corner_button</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>


    <style name="style_send_button_cotainer">
        <item name="android:layout_width">140px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
    </style>

    <style name="style_small_loadding">
        <item name="android:layout_width">@dimen/loading_height</item>
        <item name="android:layout_height">@dimen/loading_height</item>
        <item name="android:elevation">@dimen/elevation_huge</item>
        <item name="android:translationZ">@dimen/translationZ_huge</item>
        <item name="android:indeterminateDrawable">@drawable/frame_loading</item>
    </style>


    <style name="style_privacy_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:text">@string/str_private_introduce</item>
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textSize">@dimen/font_smart</item>
    </style>


    <style name="style_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolview_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/elevation_huge</item>
        <item name="android:translationZ">@dimen/translationZ_huge</item>
    </style>

    <style name="style_toolbar_title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>


    <!--<style name="style_small_text">-->
        <!--<item name="android:layout_width">wrap_content</item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
        <!--<item name="android:textSize">@dimen/font_large</item>-->
        <!--<item name="android:textColor">@color/color_font_black_light</item>-->
    <!--</style>-->

    <style name="style_back_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <!--<item name="android:background">@drawable/selector_back_button</item>-->
    </style>

    <style name="style_back_button">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <item name="android:src">@mipmap/ico_back_white</item>
    </style>


    <style name="style_home_navigate_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_smart</item>
    </style>

    <style name="style_live_tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="style_my_black_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_my_gray_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/color_gray_dark</item>
    </style>


</resources>
