<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zhiyicx.zhibolibrary">

    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:maxSdkVersion="22"/>
    <application>
        <activity
            android:name=".ui.activity.HomeActivity"
            android:label="@string/str_home"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zhiyicx.zhibolibrary.ui.activity.EndStreamingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTittleAndBlackStatus" />
        <activity
            android:name="com.zhiyicx.zhibolibrary.ui.activity.GoldRankActivity"
            android:label="@string/str_gold_rank"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhiyicx.zhibolibrary.ui.activity.LivePlayActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhiyicx.zhibolibrary.ui.activity.PermissionsActivity"
            android:label="@string/use_dtail"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhiyicx.zhibolibrary.ui.activity.PublishLiveActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zhiyicx.zhibolibrary.ui.activity.RankingActivity"
            android:label="@string/str_ranking"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.zhiyicx.zhibolibrary.ui.activity.SearchActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <!-- 支付宝支付 Web版本 -->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden"></activity>
        <activity
            android:name="com.alipay.sdk.auth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"></activity>
        <!-- 网络监听广播 -->
        <receiver
            android:name="com.zhiyicx.zhibolibrary.app.receiver.NetChangeReceiver"
            android:label="NetworkConnection">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <!-- 更新服务 -->
        <service android:name="com.zhiyicx.zhibosdk.service.ZBUpdateService" />




        <!-- autolayout -->
        <meta-data
            android:name="design_width"
            android:value="750" />
        <meta-data
            android:name="design_height"
            android:value="1334" />
    </application>
</manifest>
