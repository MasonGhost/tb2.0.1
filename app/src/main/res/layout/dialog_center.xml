<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_center_dialog_corner_circle"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tip"
            android:layout_width="@dimen/dialog_width"
            android:layout_height="@dimen/dialog_height"
            android:layout_marginLeft="@dimen/qa_top_select_height"
            android:layout_marginRight="@dimen/qa_watch_button_height"
            android:layout_marginTop="@dimen/floating_button_bottom_margin"
            android:src="@mipmap/ico_word_success" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/location_search_item_space"
            android:text="@string/word_success"
            android:textColor="@color/white"
            android:textSize="@dimen/qa_search_empty_size" />
    </LinearLayout>
</LinearLayout>