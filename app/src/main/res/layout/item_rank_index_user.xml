<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_user_container"
                android:layout_width="@dimen/spacing_huge"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <com.zhiyicx.baseproject.widget.UserAvatarView
            android:id="@+id/iv_user_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_for_dynamic_list_content"
            android:textSize="@dimen/size_icon_assist"
            android:layout_marginTop="@dimen/spacing_mid_small_8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/iv_user_portrait"
            tools:text="xxxxxxxxxxxx"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>