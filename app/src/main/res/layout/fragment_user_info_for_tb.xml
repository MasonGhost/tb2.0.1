<com.wcy.overscroll.OverScrollLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overscroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhiyicx.thinksnsplus.modules.home.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgColor"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <!--更换头像-->
            <RelativeLayout
                android:id="@+id/rl_change_head_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/userinfo_head_icon_container_hegiht"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_head_icon_container"
                    android:layout_width="@dimen/uerinfo_sub_title_hint_with"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_mid"
                    android:layout_marginRight="@dimen/spacing_mid">

                    <com.zhiyicx.baseproject.widget.UserAvatarView
                        android:id="@+id/iv_head_icon"
                        android:layout_width="@dimen/headpic_for_list"
                        android:layout_height="@dimen/headpic_for_list"
                        app:ts_avatare_size="@dimen/headpic_for_list"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/pic_default_secret"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ll_head_icon_container"
                    android:text="@string/change_head_icon"
                    android:textColor="@color/important_for_content"
                    android:textSize="@dimen/size_sub_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:src="@mipmap/ic_arrow_smallgrey"/>
            </RelativeLayout>

            <View style="@style/style_divider_horizontal_light"/>

            <!--修改用户名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/userinfo_btn_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/uerinfo_sub_title_hint_with"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_mid"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:text="@string/user_name"
                    android:textColor="@color/normal_for_assist_text"
                    android:textSize="@dimen/size_sub_title"/>

            </LinearLayout>

            <include
                layout="@layout/include_horizontal_userinfo_white_bg_divider"/>
            <!--修改性别-->
            <LinearLayout
                android:id="@+id/ll_sex_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/userinfo_btn_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/uerinfo_sub_title_hint_with"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_mid"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:text="@string/sex"
                    android:textColor="@color/normal_for_assist_text"
                    android:textSize="@dimen/size_sub_title"/>

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/select_sex"
                    android:text=""
                    android:textColor="@color/important_for_content"
                    android:textColorHint="@color/general_for_hint"
                    android:textSize="@dimen/size_sub_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:src="@mipmap/ic_arrow_smallgrey"/>
            </LinearLayout>

            <include
                layout="@layout/include_horizontal_userinfo_white_bg_divider"/>
            <!--修改城市-->
            <LinearLayout
                android:id="@+id/ll_city_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/userinfo_btn_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/uerinfo_sub_title_hint_with"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_mid"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:text="@string/city"
                    android:textColor="@color/normal_for_assist_text"
                    android:textSize="@dimen/size_sub_title"/>

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/select_city"
                    android:text=""
                    android:textColor="@color/important_for_content"
                    android:textColorHint="@color/general_for_hint"
                    android:textSize="@dimen/size_sub_title"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:src="@mipmap/ic_arrow_smallgrey"/>
            </LinearLayout>

            <include
                layout="@layout/include_horizontal_userinfo_white_bg_divider"/>
            <!--修改标签-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_tag_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/userinfo_btn_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/uerinfo_sub_title_hint_with"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_mid"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:text="@string/tag"
                    android:textColor="@color/normal_for_assist_text"
                    android:textSize="@dimen/size_sub_title"/>

                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <com.zhy.view.flowlayout.TagFlowLayout
                            android:id="@+id/fl_tags"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/spacing_normal"
                            android:paddingTop="@dimen/spacing_normal"
                            app:max_select="0"/>
                    <TextView
                            android:id="@+id/tv_tag_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_tag"
                            android:text=""
                            android:textColor="@color/important_for_content"
                            android:textColorHint="@color/general_for_hint"
                            android:textSize="@dimen/size_sub_title"
                            android:visibility="visible"/>

                    <com.zhiyicx.baseproject.widget.edittext.DeleteEditText
                        android:id="@+id/et_user_name"
                        style="@style/style_edit_cursor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingRight="@dimen/spacing_mid"
                        android:textColor="@color/important_for_content"
                        android:textColorHint="@color/general_for_hint"
                        android:textSize="@dimen/size_sub_title"/>
                </FrameLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:src="@mipmap/ic_arrow_smallgrey"/>
            </LinearLayout>
            <!--修改简介-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/userinfo_btn_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/uerinfo_sub_title_hint_with"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_mid"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:layout_marginTop="@dimen/introduce_padding_top"
                    android:gravity="center_vertical"
                    android:text="@string/introduce"
                    android:textColor="@color/normal_for_assist_text"
                    android:textSize="@dimen/size_sub_title"/>
                <!--简介编辑框-->
                <com.zhiyicx.thinksnsplus.widget.UserInfoInroduceInputView
                    android:id="@+id/et_user_introduce"
                    style="@style/style_edit_cursor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_mid"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/spacing_mid"
                    android:paddingTop="@dimen/introduce_padding_top"
                    android:visibility="visible"
                    app:hintContent="@string/edit_introduce"
                    app:limitSize="@integer/introduce_input_max_size"
                    app:showLimitSize="@integer/show_introduce_input_size"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.wcy.overscroll.OverScrollLayout>