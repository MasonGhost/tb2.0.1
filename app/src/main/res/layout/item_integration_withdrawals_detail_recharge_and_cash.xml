<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/withdrawal_detail_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/withdrawals_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:gravity="center"
        android:textColor="@color/general_for_loading_more"
        android:textSize="@dimen/size_icon_assist"/>

    <TextView
        android:id="@+id/withdrawals_account"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/important_for_content"
        android:textSize="@dimen/size_content"/>

    <TextView
        android:id="@+id/withdrawals_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:gravity="right"
        android:enabled="false"
        android:textColor="@color/selector_withdrawalstext_color"
        android:textSize="@dimen/size_sub_title"
        tools:text="-780"/>

</LinearLayout>