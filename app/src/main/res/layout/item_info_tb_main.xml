<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/spacing_large"
    android:paddingLeft="@dimen/spacing_mid"
    android:paddingRight="@dimen/spacing_mid"
    android:paddingTop="@dimen/spacing_large">

    <ImageView
        android:id="@+id/item_info_imag"
        android:layout_width="118dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_mid"
        android:scaleType="centerCrop"
        android:src="@drawable/shape_default_image"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_info_imag"
        android:orientation="vertical">

        <com.zhiyicx.thinksnsplus.widget.NoDefaultPadingTextView
            android:id="@+id/item_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/important_for_content"
            android:textSize="@dimen/size_primary_title"
            tools:text="流动性捉襟见肘，新三板如履薄冰"/>

        <TextView
            android:id="@+id/item_info_timeform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_merhcain_headpic"
            android:layout_marginTop="@dimen/spacing_mid"
            android:layout_toRightOf="@id/iv_merhcain_headpic"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/general_for_hint"
            android:textSize="@dimen/size_content"
            tools:text="三小时前"/>

    </LinearLayout>

</RelativeLayout>
