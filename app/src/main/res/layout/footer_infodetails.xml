<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/headpic_for_notification_27dp"
    android:paddingTop="@dimen/headpic_for_question_list"
    android:visibility="gone">

    <View
        style="@style/style_divider_horizontal_light"
        android:layout_marginLeft="@dimen/toolbar_padding_left"
        android:layout_marginRight="@dimen/margin_12"
        android:layout_weight="1"
        android:background="@color/general_for_default_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dynamic_tip"
        android:textColor="@color/tb_color_comment"
        android:textSize="@dimen/size_sub_title" />

    <View
        style="@style/style_divider_horizontal_light"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginRight="@dimen/toolbar_padding_left"
        android:layout_weight="1"
        android:background="@color/general_for_default_line" />
</LinearLayout>
