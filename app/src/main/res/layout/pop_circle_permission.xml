<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small"
        android:background="@drawable/shape_raduse_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/light_linear_driver"
        app:cardCornerRadius="@dimen/button_corner_small"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <!--选择完善资料-->
        <TextView
            android:id="@+id/item_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pop_choose_third_type_height_samll"
            android:gravity="center"
            android:text="@string/third_platform_complete_register"
            android:textColor="@color/normal_for_dynamic_list_content"
            android:textSize="@dimen/size_icon_assist"/>


        <!--选择绑定已有账号-->
        <TextView
            android:id="@+id/item_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pop_choose_third_type_height_samll"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_25"
            android:paddingRight="@dimen/margin_25"
            android:text="@string/third_platform_bind_old_account"
            android:textColor="@color/normal_for_dynamic_list_content"
            android:textSize="@dimen/size_icon_assist"/>


        <TextView
            android:id="@+id/item_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pop_choose_third_type_height_samll"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_25"
            android:paddingRight="@dimen/margin_25"
            android:text="@string/third_platform_bind_old_account"
            android:textColor="@color/normal_for_dynamic_list_content"
            android:textSize="@dimen/size_icon_assist"/>

    </LinearLayout>
</android.support.v7.widget.CardView>