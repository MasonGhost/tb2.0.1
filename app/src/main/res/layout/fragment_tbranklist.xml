<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tbrank_title_height"
        android:layout_marginBottom="@dimen/divider_line"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="76"
            android:gravity="center"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"
            android:text="@string/rank_name"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_weight="159"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"
            android:text="@string/user"/>


        <TextView
            android:id="@+id/tv_friends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"
            android:text="@string/friends"/>

        <TextView
            android:id="@+id/tv_tbmark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/size_sub_title"
            android:text="TBMark"/>
    </LinearLayout>

    <include layout="@layout/fragment_tslist"/>

</LinearLayout>