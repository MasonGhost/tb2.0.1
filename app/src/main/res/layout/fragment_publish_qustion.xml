<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhiyicx.thinksnsplus.widget.UserInfoInroduceInputView
        android:id="@+id/et_qustion"
        style="@style/style_edit_cursor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large"
        app:hintContent="@string/qa_publish_title_hint"
        app:limitSize="@integer/introduce_input_max_size"
        app:showLimitSize="@integer/dynamic_title_max_size"/>

    <View
        android:id="@+id/line"
        style="@style/style_divider_horizontal_light"/>

    <include
        layout="@layout/fragment_tslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include"/>

</LinearLayout>