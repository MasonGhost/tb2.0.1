<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:paddingLeft="@dimen/headpic_for_info_list"
              android:paddingBottom="@dimen/spacing_mid_small"
              android:paddingRight="@dimen/headpic_for_info_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_message_headpic"
                android:layout_width="@dimen/iamge_close_height"
                android:layout_height="@dimen/iamge_close_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/headpic_for_info_list"
                android:src="@drawable/shape_default_image"/>

            <com.zhiyicx.baseproject.widget.BadgeView
                android:id="@+id/tv_read_tip"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/iv_message_headpic"
                android:layout_alignTop="@id/iv_message_headpic"
                android:layout_marginRight="-9dp"
                android:layout_marginTop="-9dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/size_icon_assist"
                tools:text="99"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="@dimen/headpic_for_info_list">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/important_for_content"
                android:textSize="@dimen/qa_search_empty_size"
                tools:text="title"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/message_content"
                tools:text="这个是一个简单的说明"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tbtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="right"
            android:paddingTop="@dimen/headpic_for_info_list"
            android:singleLine="true"
            android:textColor="@color/normal_for_assist_text"
            android:textSize="@dimen/message_time"
            tools:text="2017-11-12"/>

    </LinearLayout>

</LinearLayout>