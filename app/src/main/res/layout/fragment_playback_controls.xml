<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fragment_back_albun_art"
        android:layout_width="@dimen/rec_image_for_photo"
        android:layout_height="@dimen/rec_image_for_photo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon"/>

    <LinearLayout
        android:id="@+id/fragment_back_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/fragment_back_albun_art"
        android:layout_toLeftOf="@+id/fragment_back_play_pause"
        android:layout_toRightOf="@id/fragment_back_albun_art"
        android:layout_toStartOf="@+id/fragment_back_play_pause"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_back_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/fragment_back_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/fragment_back_extra_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/fragment_back_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@mipmap/music_ico_play"
        android:tint="@color/bg_pb_cover"/>
</RelativeLayout>
