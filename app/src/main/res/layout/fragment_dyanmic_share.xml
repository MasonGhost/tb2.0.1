<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom_container"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ll_share_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fdfdfd"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bgpic_top_375" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/item_contaienr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:descendantFocusability="blocksDescendants"
                android:paddingTop="@dimen/spacing_mid"
                tools:context="com.zhiyicx.thinksnsplus.modules.home.HomeActivity">

                <com.zhiyicx.baseproject.widget.UserAvatarView
                    android:id="@+id/iv_headpic"
                    android:layout_width="@dimen/headpic_for_dynamic_list"
                    android:layout_height="@dimen/headpic_for_dynamic_list"
                    android:layout_alignBottom="@+id/fl_tip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:src="@drawable/shape_default_image_circle"
                    app:ts_avatare_size="@dimen/headpic_for_dynamic_list" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_headpic"
                    android:maxLength="@integer/username_max_length"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/size_icon_assist"
                    android:textStyle="bold"
                    tools:text="张三" />

                <TextView
                    android:id="@+id/tv_top_flag"
                    android:layout_width="@dimen/dynamic_top_flag_width"
                    android:layout_height="@dimen/dynamic_top_flag_height"
                    android:layout_alignBaseline="@id/tv_name"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_toLeftOf="@+id/tv_follow"
                    android:background="@drawable/shape_dynamic_top_flag"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/dyanmic_top_flag"
                    android:textSize="@dimen/size_advert_launche"
                    android:visibility="gone"
                    tools:text="@string/dynamic_top_flag" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_title"
                    android:layout_alignStart="@+id/tv_title"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginBottom="@dimen/spacing_mid_tb"
                    android:layout_toRightOf="@id/iv_headpic"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:paddingTop="@dimen/spacing_small"
                    android:textColor="@color/general_for_hint"
                    android:textSize="@dimen/size_note_assist"
                    tools:text="2016-05-06" />

                <TextView
                    android:id="@+id/tv_follow"
                    style="@style/followButtonStyle"
                    android:layout_alignBaseline="@id/tv_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:gravity="center"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_toRightOf="@+id/iv_headpic"
                    android:includeFontPadding="false"
                    android:paddingBottom="@dimen/spacing_normal"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:paddingStart="@dimen/spacing_normal"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/size_sub_title"
                    android:visibility="gone"
                    tools:text="了解到富士康垃圾管理的高考了了" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:ellipsize="end"
                    android:letterSpacing="0.08"
                    android:lineSpacingMultiplier="@dimen/line_spacing_Multiplier_normal_tb"
                    android:paddingBottom="@dimen/dynamic_image_padding_bottom"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:paddingRight="@dimen/spacing_normal"
                    android:singleLine="false"
                    android:textColor="@color/important_for_content"
                    android:textSize="@dimen/size_sub_title"
                    tools:text="了解到富士康垃圾管理的高考了了解到富士康垃圾管理的高考了上了飞机都是垃圾管理当局阿斯利康就够了洒进风口浪尖的萨科了解孤苦伶仃撒酒疯就了解到富士康垃圾管理的高考了上了飞机都是垃圾管理当局阿斯利康就够了洒进风口浪尖的萨科了解孤苦伶仃撒酒疯就了解到富士康垃圾管理的高考了上了飞机都是垃圾管理当局阿斯利康就够了洒进风口浪尖的萨科了解孤苦伶仃撒酒疯就算了更加都是了解到富士康垃圾管理的高考了上了飞机都是垃圾管理当局阿斯利康就够了洒进风口浪尖的萨科了解孤苦伶仃撒酒疯就算了更加都是非法sad个是敢死队风格发生的个发送非法sad个是敢死队风格发生的个发送算了更加都是非法sad个是敢死队风格发生的个发送算了更加都是非法sad个是敢死队风格发生的个发送上了飞机都是垃圾管理当局阿斯利康就够了洒进风口浪尖的萨科了解孤苦伶仃撒酒疯就算了更加都是非法sad个是敢死队风格发生的个发送" />


                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_content"
                    android:layout_toRightOf="@+id/iv_headpic"
                    android:paddingBottom="@dimen/dynamic_image_padding_bottom"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:textSize="@dimen/size_icon_assist"
                    android:visibility="gone" />

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_line"
                    android:layout_below="@+id/tv_from"
                    android:background="@color/general_for_line_light" />

                <com.zhiyicx.baseproject.widget.TBDynamicListMenuView
                    android:id="@+id/dlmv_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v_line"
                    android:layout_marginTop="@dimen/divider_line" />

                <include
                    android:id="@+id/fl_tip"
                    layout="@layout/view_hint_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dlmv_menu"
                    android:layout_toRightOf="@+id/iv_headpic"
                    android:visibility="gone" />

                <include layout="@layout/include_dynamic_list_comment_view" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_bigger_large_35"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_bottom_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/bgpic_bottom" />

                <LinearLayout
                    android:id="@+id/ll_qr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="74dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_qr"
                        android:layout_width="@dimen/share_qr_code_with"
                        android:layout_height="@dimen/share_qr_code_with"
                        android:src="@drawable/shape_default_image" />

                    <TextView
                        android:id="@+id/tv_qr_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:gravity="center"
                        android:text="@string/scan_get_candy"
                        android:textColor="@color/share_qr_code_tip_text_color"
                        android:textSize="@dimen/size_content_assist" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_line"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:background="@drawable/light_linear_driver" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:gravity="center"
                        android:text="@string/read_latest_info"
                        android:textColor="@color/normal_for_assist_text"
                        android:textSize="@dimen/size_icon_assist" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3dp"
                        android:text="重要程度"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <android.support.v7.widget.AppCompatRatingBar
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ll_qr"
                    android:layout_marginBottom="@dimen/spacing_mid"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:drawableLeft="@mipmap/ico_share"
                    android:drawablePadding="@dimen/spacing_small"
                    android:text="分享自TokenBook"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="right|center"
        android:orientation="horizontal"
        android:paddingRight="@dimen/spacing_large">

        <TextView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/topbar_back"
            android:paddingBottom="@dimen/spacing_mid"
            android:paddingLeft="@dimen/spacing_normal_large"
            android:paddingRight="@dimen/spacing_normal_large"
            android:paddingTop="@dimen/spacing_mid" />

        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_mid"
            android:paddingRight="@dimen/spacing_mid"
            android:paddingTop="@dimen/spacing_normal"
            android:src="@mipmap/ico_wechat_s" />

        <ImageView
            android:id="@+id/iv_wechat_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_mid"
            android:paddingRight="@dimen/spacing_mid"
            android:paddingTop="@dimen/spacing_normal"
            android:src="@mipmap/ico_circles_s" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_mid"
            android:paddingRight="@dimen/spacing_mid"
            android:paddingTop="@dimen/spacing_normal"
            android:src="@mipmap/ico_save_s" />
    </LinearLayout>
</RelativeLayout>