<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--中文名-->
        <LinearLayout
            android:id="@+id/ll_cn_name_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_mechainism_cn_name"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_cn_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <!--<View-->
            <!--style="@style/style_divider_horizontal_light"-->
            <!--android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"/>-->

        <!--英文名-->
        <LinearLayout
            android:id="@+id/ll_en_name_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_mechainism_en_name"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_en_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <View
            android:id="@+id/line_name"
            style="@style/style_divider_horizontal_light"
            android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"
            android:visibility="gone"/>


        <!--简介-->
        <LinearLayout
            android:id="@+id/ll_introduce_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_mid"
            android:paddingTop="@dimen/spacing_mid"
            android:visibility="visible">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/introduce"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_introduce"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tymjfiowaefjisdnfkldssssssssssssssssssssssssssssssssss
                sssssssdsoifff
                ieafhoieeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"/>

        </LinearLayout>

        <View
            android:id="@+id/line_intro"
            style="@style/style_divider_horizontal_light"

            android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"
            android:visibility="gone"/>

        <!--发行时间-->
        <LinearLayout
            android:id="@+id/ll_coin_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_publish_time"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <!--<View-->
        <!--style="@style/style_divider_horizontal_light"-->
        <!--android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"/>-->

        <!--发行总量-->
        <LinearLayout
            android:id="@+id/ll_count_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_publish_count"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <!--<View-->
        <!--style="@style/style_divider_horizontal_light"-->
        <!--android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"/>-->

        <!--流通总量-->
        <LinearLayout
            android:id="@+id/ll_currency_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_publish_currency"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <!--<View-->
        <!--style="@style/style_divider_horizontal_light"-->
        <!--android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"/>-->


        <!--发行价格-->
        <LinearLayout
            android:id="@+id/ll_price_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_publish_price"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <!--<View-->
        <!--style="@style/style_divider_horizontal_light"-->
        <!--android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"/>-->


        <!--上线交所-->
        <LinearLayout
            android:id="@+id/ll_online_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_online_com"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_online"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <!--<View-->
        <!--style="@style/style_divider_horizontal_light"-->
        <!--android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"/>-->

        <!--社交媒体-->
        <LinearLayout
            android:id="@+id/ll_media_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_media"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_media"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <!--<View-->
        <!--style="@style/style_divider_horizontal_light"-->
        <!--android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"/>-->

        <!--官方网站-->
        <LinearLayout
            android:id="@+id/ll_website_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_website"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_website"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <!--<View-->
        <!--style="@style/style_divider_horizontal_light"-->
        <!--android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"/>-->

        <!--区块浏览-->
        <LinearLayout
            android:id="@+id/ll_info_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_look_info"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"
                tools:text="tym"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <br.tiagohm.markdownview.MarkdownView
                android:id="@+id/mv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_large"
                android:visibility="invisible"
                tools:ignore="WebViewLayout"/>

            <!--用来占位的-->
            <ImageView
                android:id="@+id/iv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_pic_personal"
                android:visibility="gone"/>
        </FrameLayout>


        <View
            android:id="@+id/line_content"
            style="@style/style_divider_horizontal_light"

            android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="@dimen/spacing_large"
            android:progressDrawable="@drawable/layer_list_progress_drawable_download"
            android:visibility="gone"/>

        <!--白皮书-->
        <LinearLayout
            android:id="@+id/ll_book_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/userinfo_btn_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/mechainism_name_hint_with"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_mid"
                android:layout_marginRight="@dimen/spacing_mid"
                android:text="@string/tb_coin_book"
                android:textColor="@color/normal_for_assist_text"
                android:textSize="@dimen/size_sub_title"/>

            <TextView
                android:id="@+id/tv_book"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ico_pdf"
                android:drawablePadding="@dimen/spacing_small"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="白皮书下载"
                android:textColor="@color/important_for_content"
                android:textColorHint="@color/general_for_hint"
                android:textSize="@dimen/size_sub_title"/>

        </LinearLayout>

        <View
            android:id="@+id/line_book"
            style="@style/style_divider_horizontal_light"
            android:layout_marginLeft="@dimen/tb_mechainism_divier_marginleft"
            android:visibility="gone"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>