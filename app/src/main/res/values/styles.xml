<resources>

    <style name="activity_topin_bottomout" parent="TSTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--显示透明背景的activity，用于图片预览缩放动画的实现-->
    <style name="TransParentTheme" parent="TSTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item><!---->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GalleryTheme" parent="@style/TransParentTheme">
        <item name="android:windowFullscreen">true</item><!---->
    </style>

    <style name="DynamciSelectTheme" parent="@style/GalleryTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/home_add_page_bg</item>

    </style>

    <!--#########################################      动态置顶       ################################-->
    <!--动态置顶选择天数-->
    <style name="style_dynamic_radiobutton">
        <item name="android:button">@null</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">@color/selector_topdynamictext_color</item>
        <item name="android:textSize">@dimen/size_content</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:visibility">invisible</item>-->
        <item name="android:background">@drawable/selector_radiobutton_cornaer_dynamic_top</item>
        <item name="android:layout_weight">1</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_height">@dimen/dynamice_top_input_height</item>
    </style>

    <!--动态置顶输入金额-->
    <style name="style_dynamic_editext" parent="style_edit_cursor">
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:digits">0123456789.</item>
        <item name="android:maxLength">@integer/money_input_max_size</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:textSize">@dimen/size_content_assist</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ThirdLoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/important_for_content</item>
        <item name="android:textSize">@dimen/size_icon_assist</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
    </style>

    <style name="CertificationDetailContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/certification_input_item_height</item>
        <item name="android:layout_marginLeft">@dimen/spacing_mid</item>
        <item name="android:layout_marginRight">@dimen/spacing_mid</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CertificationDetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/important_for_content</item>
    </style>

    <style name="NoBackGroundDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CenterDialog" parent="android:Theme.Light">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="followButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/themeColor</item>
        <item name="android:textSize">@dimen/size_advert_launche</item>
        <!--<item name="android:background">@drawable/shape_radus_box_themecolor</item>-->
        <item name="android:background">@mipmap/ico_bg_follow</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_small_3dp</item>
        <item name="android:paddingTop">@dimen/spacing_small_3dp</item>
        <item name="android:text">@string/add_follow</item>
    </style>

    <style name="def_checkinView">
        <item name="sign_in_bg_color">#f2f2f2</item>
        <item name="sign_in_pb_start_color">#fac25e</item>
        <item name="sign_in_pb_end_color">#f28161</item>
        <item name="sign_in_text_color">#bfbfbf</item>
        <item name="sign_in_text_siz">12sp</item>
    </style>
</resources>
