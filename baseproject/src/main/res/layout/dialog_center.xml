<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_word_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_center_dialog_corner_circle"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_tip"
            android:layout_width="@dimen/dialog_width"
            android:layout_height="@dimen/dialog_height"
            android:layout_marginLeft="@dimen/upload_info_cover_width"
            android:layout_marginRight="@dimen/upload_info_cover_width"
            android:layout_marginTop="@dimen/floating_button_bottom_margin"
            android:src="@mipmap/ico_word_success" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/location_search_item_space"
            android:text="@string/word_success"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/qa_search_empty_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_word_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_center_dialog_corner_circle"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/margin_25"
        android:paddingRight="@dimen/margin_25"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/upload_info_cover_width"
            android:layout_marginRight="@dimen/upload_info_cover_width"
            android:layout_marginTop="@dimen/margin_25"
            android:text="@string/word_finish_title"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/qa_search_empty_size" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/location_search_item_space"
            android:text="@string/word_finish_tip"
            android:textColor="@color/tb_word_notice"
            android:textSize="@dimen/size_icon_assist" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/location_search_item_space"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_button_rec_white"
                android:gravity="center"
                android:paddingBottom="@dimen/btn_margin_top"
                android:paddingLeft="@dimen/music_icon_size"
                android:paddingRight="@dimen/music_icon_size"
                android:paddingTop="@dimen/btn_margin_top"
                android:text="@string/word_finish_confirm"
                android:textColor="@color/tb_word_notice"
                android:textSize="@dimen/qa_search_empty_size" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/btn_margin"
                android:background="@drawable/shape_button_rec_blue"
                android:gravity="center"
                android:paddingBottom="@dimen/btn_margin_top"
                android:paddingLeft="@dimen/music_icon_size"
                android:paddingRight="@dimen/music_icon_size"
                android:paddingTop="@dimen/btn_margin_top"
                android:text="@string/word_finish_cancel"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/qa_search_empty_size" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>